<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5px" />
                    <stroke android:width="1px" android:color="#37333b" />
                </shape>
            </item>
            <item android:bottom="1px" android:left="1px" android:right="1px" android:top="1px">
                <shape>
                    <corners android:radius="5px" />
                    <stroke android:width="2px" android:color="#242126" />
                </shape>
            </item>
            <item android:bottom="3px" android:left="3px" android:right="3px" android:top="3px">
                <shape>
                    <corners android:radius="5px" />
                    <stroke android:width="1px" android:color="#bab6c0" />
                </shape>
            </item>
            <item android:bottom="4px" android:left="4px" android:right="4px" android:top="4px">
                <shape>
                    <corners android:radius="5px" />
                    <solid android:color="#297b5f" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="5px" />
                    <stroke android:width="1px" android:color="#37333b" />
                </shape>
            </item>
            <item android:bottom="1px" android:left="1px" android:right="1px" android:top="1px">
                <shape>
                    <corners android:radius="5px" />
                    <stroke android:width="2px" android:color="#242126" />
                </shape>
            </item>
            <item android:bottom="3px" android:left="3px" android:right="3px" android:top="3px">
                <shape>
                    <corners android:radius="5px" />
                    <stroke android:width="1px" android:color="#bab6c0" />
                </shape>
            </item>
            <item android:bottom="4px" android:left="4px" android:right="4px" android:top="4px">
                <shape>
                    <corners android:radius="5px" />
                    <solid android:color="#359172" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

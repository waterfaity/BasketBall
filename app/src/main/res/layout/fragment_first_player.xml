<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/left_margin"
    android:paddingRight="@dimen/left_margin"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/multi_clothes" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/top_margin_button_first_fragment"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/change_clothes"
            android:layout_width="@dimen/width_clothes_change_button"
            android:layout_height="@dimen/height_button_first_fragment"
            android:layout_marginRight="@dimen/right_margin_button_first_fragment"
            android:background="@drawable/bg_button_fragment"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/chang_clothes_num"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button_first_fragment" />

        <TextView
            android:id="@+id/go_to_court"
            android:layout_width="@dimen/width_go_to_court_button"
            android:layout_height="@dimen/height_button_first_fragment"
            android:layout_marginLeft="@dimen/left_change_clothes_button"
            android:layout_marginRight="@dimen/right_margin_button_first_fragment"
            android:layout_toRightOf="@+id/change_clothes"
            android:background="@drawable/bg_button_fragment"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/go_to_court"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button_first_fragment" />

        <include
            layout="@layout/back_in_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>

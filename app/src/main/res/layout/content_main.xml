<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.WatchLoggingActivity"
    tools:showIn="@layout/activity_main">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--第一部分 -->
            <!--队伍名字,比分,时间,小节-->
            <android.support.percent.PercentRelativeLayout
                android:id="@+id/percent_1"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="3px"
                android:layout_marginTop="8px"
                app:layout_heightPercent="7.45%">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="65px"
                    android:background="@color/line" />
                <!--A队名字-->
                <TextView
                    android:id="@+id/a_name"
                    android:gravity="center"
                    android:text="梦之队"
                    android:textColor="@color/white"
                    app:layout_marginLeftPercent="2.21%"
                    app:layout_widthPercent="21.80%" />
                <!--B队名字-->
                <TextView
                    android:id="@+id/b_name"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="星之队"
                    android:textColor="@color/white"
                    app:layout_marginRightPercent="2.21%"
                    app:layout_widthPercent="21.80%" />
                <!--中心时间 小节-->
                <android.support.percent.PercentRelativeLayout
                    android:id="@+id/center_time"
                    android:layout_centerInParent="true"
                    app:layout_widthPercent="17.97%">

                </android.support.percent.PercentRelativeLayout>

                <!--A得分-->
                <com.huizetime.basketball.widget.BigNumView
                    android:id="@+id/b_score"

                    android:padding="8px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@id/b_name"
                    android:layout_toRightOf="@id/center_time"
                    android:background="@drawable/bg_score"
                    app:layout_marginLeftPercent="1.56%"
                    app:layout_marginRightPercent="1.56%" />
                <!--B得分-->
                <com.huizetime.basketball.widget.BigNumView
                    android:padding="8px"
                    android:id="@+id/a_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/center_time"
                    android:layout_toRightOf="@id/a_name"
                    android:background="@drawable/bg_score"
                    app:layout_marginLeftPercent="1.56%"
                    app:layout_marginRightPercent="1.56%" />


            </android.support.percent.PercentRelativeLayout>
            <!--第二部分-->
            <!--logo,犯规,暂停,比赛状态-->
            <android.support.percent.PercentRelativeLayout

                android:id="@+id/percent_2"
                android:layout_width="match_parent"
                android:layout_below="@+id/percent_1"
                app:layout_heightPercent="5.08%"
                app:layout_marginLeftPercent="2.21%"
                app:layout_marginRightPercent="2.21%">

                <LinearLayout

                    android:gravity="center_vertical"
                    app:layout_widthPercent="35%">

                    <ImageView
                        android:id="@+id/a_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ball" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/activity_horizontal_margin_half"
                                android:text="犯规" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="@color/faul" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/activity_horizontal_margin_half"
                                android:text="犯规" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45"
                                android:textColor="@color/pause" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    app:layout_widthPercent="35%">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="@color/faul" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                                android:text="犯规" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45"
                                android:textColor="@color/pause" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                                android:text="犯规" />


                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/b_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ball" />

                </LinearLayout>

                <TextView
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="比赛暂停"
                    app:layout_widthPercent="21.41%" />

            </android.support.percent.PercentRelativeLayout>
            <!--实时消息 1,2-->
            <android.support.percent.PercentRelativeLayout

                android:id="@+id/percent_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/percent_2"
                app:layout_heightPercent="10.16%"
                app:layout_marginLeftPercent="2.21%"
                app:layout_marginRightPercent="2.21%">

                <TextView
                    android:id="@+id/msg1"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:text="进球啦"
                    app:layout_heightPercent="50%" />

                <TextView
                    android:id="@+id/msg2"
                    android:layout_width="match_parent"
                    android:layout_below="@id/msg1"
                    android:gravity="center_vertical"
                    android:text="罚球"
                    app:layout_heightPercent="50%" />
            </android.support.percent.PercentRelativeLayout>

            <LinearLayout

                android:id="@+id/percent_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/percent_3"
                android:orientation="vertical"
                app:layout_marginLeftPercent="2.21%"
                app:layout_marginRightPercent="2.21%">
                <!--球场-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.huizetime.basketball.widget.CourtView
                        android:id="@+id/court_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/court_bg" />
                </LinearLayout>
                <!--fragment-->
                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/percent_4" />

            </LinearLayout>


        </android.support.percent.PercentRelativeLayout>


    </android.support.percent.PercentRelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="connect"
            android:text="connect" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="close"
            android:text="close" />

        <Button
            android:id="@+id/send_watch_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="send_watch_info" />

        <Button
            android:id="@+id/send_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="send_img" />

        <Button
            android:id="@+id/send_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="send_sign" />

        <Button
            android:id="@+id/send_score_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="send_score_info" />

        <Button
            android:id="@+id/send_chang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="send_chang" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.huizetime.basketball.widget.CourtView
            android:id="@+id/court_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/court_bg" />
    </LinearLayout>

    <com.huizetime.basketball.widget.NumView
        android:id="@+id/num_view"
        android:layout_width="wrap_content"
        android:layout_height="107px" />
    <com.huizetime.basketball.widget.BigNumView
        android:id="@+id/big_num_view"
        android:layout_width="wrap_content"
        android:layout_height="107px" />


</LinearLayout>
